<Window x:Class="demotme.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demotme"
        mc:Ignorable="d"
        Title="EditProductWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <!-- Разместите элементы управления для редактирования свойств продукта -->
            <StackPanel>
                <TextBox Text="{Binding name_prod}" />
                <TextBox Text="{Binding colvo}" />
                <TextBox Text="{Binding description}" />
                <!-- Другие элементы управления для остальных свойств продукта -->

                <Button Content="Save" Click="Button_Click" />
                <Button Content="Cancel" Click="Button_Click_1" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>

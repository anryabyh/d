<Window x:Class="demotme.Auth"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:demotme"
        mc:Ignorable="d"
        Title="Авторизация" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Label Content="Password" Grid.Row="0" Margin="58,27,242,0"></Label>
        <PasswordBox x:Name="Pass_PB" Grid.Row="1" Margin="58,5,58,22"/>
        <Label Content="Login" Grid.Row="2" Margin="58,27,242,0"></Label>
        <TextBox x:Name="Login_TB" Grid.Row="3" Margin="58,5,58,21"/>
        <Button x:Name="Auth_But" Grid.Row="4" Content="Авторизоваться" Click="Auth_But_Click"></Button>
    </Grid>
</Window>
